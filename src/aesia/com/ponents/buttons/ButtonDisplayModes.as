package aesia.com.ponents.buttons 
{

	/**
	 * Classes utilitaires regroupant les différentes constantes liées
	 * aux modes d'affichages des boutons.
	 * 
	 * @author Cédric Néhémie
	 */
	public class ButtonDisplayModes 
	{
		/**
		 * Constante du mode d'affichage dans lequel le texte et l'icône du bouton sont
		 * tout les deux visibles.
		 */
		static public const TEXT_AND_ICON : uint = 0;
		/**
		 * Constante du mode d'affichage dans lequel seul le texte du bouton est visible.
		 */		static public const TEXT_ONLY : uint = 1;
		/**
		 * Constante du mode d'affichage dans lequel seul l'icône du bouton est visible.
		 */		static public const ICON_ONLY : uint = 2;
	}
	
}
